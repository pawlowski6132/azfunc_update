{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "sql",
      "direction": "out",
      "name": "sqlOutput",
      "connectionStringSetting": "<Azure_SQL_Connection_String>",
      "tableName": "<Table_Name>",
      "sqlQuery": "UPDATE <Table_Name> SET Name = {name} WHERE Id = {id}"

    }
  ]
}